<!DOCTYPE html>
<html>
<head>
    <title><%= page %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <script src="/stylesheets/vendor/jquery/jquery.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
</head>
<header>
    <% include ./partials/header %>
</header>
<body>
</div>
<h2> Menu for <%= rname %> </h2>
<table class="table table-bordered">
    <thead class="thead-light">
    <tr>
        <th scope="col">Menu Name</th>
        <th scope="col">Menu Item</th>
        <th scope="col">Price</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i=0; i<menuCount; i++) {
        var flag = true;
    for(var j=0; j<menu[i].length; j++) { %>
    <tr>
        <% if(flag) { %>
        <td rowspan="<%= menu[i].length%>" class="align-middle"><%= menu[i][j].menuname%></td>
        <% flag = false; %>
        <% } %>
        <td><%= menu[i][j].foodname %></td>
        <td><%= menu[i][j].price %></td>
    </tr>
    <% } }%>
    </tbody>
</table>
<br>
<br>
<div>
    <form action = "/booking/confirmation" method="get">
        <label>Restaurant</label> <br>
        <input id="rname" value ="<%=rname%>" name="rname" readonly> <br><br>

        <input id="bid" value ="<%=bid%>" name="bid" hidden>

        <label>Location</label> <br>
        <input id="location" value ="<%=location%>" name="location" readonly> <br><br>
        <label>Reservation Time</label> <br>
        <%reservationTime = reservationTime.slice(1,reservationTime.length-1)%>
        <input type="time" min="<%=data[0].opentime%>" max="<%=data[0].closetime%>" step="900" class="form-control form-control-lg" value="<%=reservationTime%>" name="reservationTime" required> <br>
        <label>Reservation Date</label> <br>
        <%reservationDate = reservationDate.slice(1,reservationDate.length-1)%>
        <input type="date" class="form-control form-control-lg" value="<%=reservationDate%>" name="reservationDate" readonly> <br>
        <!--<input id="reservationTime" value ="<%=reservationTime%>" name="time"> <br><br>-->
        <label>Pax No</label> <br>
        <input id="paxNo" value="<%=paxNo%>" name="pax"> <br><br>
        <div class="col-12 col-md-3">
            <button type="submit" class="btn btn-block btn btn-primary">Confirm Reservation</button>
        </div>
    </form>
</div>
