    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
</head>
<header>
    <% include ./partials/header %>
</header>
<body>
 <form method="post" action="/">
        <label>Current Rating: </label>
        <% if (data.length === 0) { %>
            <input type="text" id="rating" name="rating" value="0" readonly>
        <% } else { %>
            <input type="text" id="rating" name="rating" value="<%=rating%>" readonly>
        <% } %>
        <label>New Rating: </label>
         <select id="newRating" name="newRating">
             <% for (let i = 0; i <= 5; i++) { %>
                <option value="<%=i%>" ><%= i %></option>
             <% } %>
         </select>

        <td><button class="btn btn-primary" onclick="show()">Submit Rating</button></td>

 </form>

<form type="hidden" method="post" action="/Ratings">
