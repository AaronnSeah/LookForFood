</form>

<script>
    function show() {
        let rnameElement = $("td").parent().children().get(0);
        let rname = $(rnameElement).text();
        $('input#rname').val(rname);
        console.log(rname);

        let bidElement = $("td").parent().children().get(0);
        let bid = $(bidElement).text();
        $('input#bid').val(bid);
        alert(rname+ " " + bid);

        // $('input#rname').val(bid);
