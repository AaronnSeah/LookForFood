    </table>

    <br><br>
    <label><strong>New  Reservation:</strong></label><br>

    <table>
        <tbody>
        <tr>
            <td> Restaurant:</td>
            <td><input type="text" id="rname" name="rname" value="<%=rname%>" disabled style="margin-top:5px; margin-left : 10px"></td>
        </tr>
        <tr>
            <td> Branch Number:</td>
            <td><input type=text" id="bid" name="bid" value="<%=bid%>" disabled style="margin-top:5px; margin-left : 10px"></td>
        </tr>
        <tr>
            <td> Pax:</td>
            <td><input type="number" id="pax" name="pax" value="<%=pax%>" style="margin-top:5px; margin-left : 10px"></td>
        </tr>
        <tr>
            <td> Reservation Time:</td>
            <td><input type="time" id="reservationTime" name="reservationTime" value="<%=reservationTime%>" style="margin-top:5px; margin-left : 10px"></td>
        </tr>

        <tr>
            <td> Reservation Date:</td>
            <td><input type="date" id="reservationDate" name="reservationDate" value="<%=reservationDate%>" style="margin-top:5px; margin-left : 10px"></td>
        </tr>
        </tbody>
    </table>
    <br>
    <table>
        <tbody>
        <tr>
            <td><button class="btn btn-primary" onclick="show()">Confirm New Reservation</button></td>

            <td><button class="btn btn-primary" onclick="show()" style="margin-left : 200px">Cancel Reservation</button></td>
        </tr>
        </tbody>
    </table>
</form>


